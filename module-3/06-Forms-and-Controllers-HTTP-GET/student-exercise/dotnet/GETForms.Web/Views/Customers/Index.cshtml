@model CustomerSearchModel
@{
    ViewData["Title"] = "Index";
}

<form asp-controller="Customers" asp-action="SearchResult" method="get">
    <div>
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" />

        <label asp-for="SortType"></label>
        <select asp-for="SortType" asp-items="CustomerSearchModel.sortMethods"></select>

        <input type="submit" value="Search" />
    </div>
</form>

